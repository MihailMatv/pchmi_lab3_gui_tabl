<Window x:Class="FileManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Manager GUI" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Текущий каталог -->
        <TextBlock Text="Текущий каталог:" FontWeight="Bold" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
        <TextBox x:Name="CurrentDirectoryTextBox" Grid.Column="1" Grid.Row="0" Margin="5,0" IsReadOnly="True" />

        <!-- Дерево каталогов -->
        <TreeView x:Name="DirectoryTreeView" Grid.Column="0" Grid.Row="1" Margin="0,5,5,5" SelectedItemChanged="DirectoryTreeView_SelectedItemChanged" />

        <!-- DataGrid файлов -->
        <DataGrid x:Name="FilesDataGrid" Grid.Column="1" Grid.Row="1" Margin="5" AutoGenerateColumns="False" SelectionMode="Extended" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя файла" Binding="{Binding FileName}" Width="*" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Только для чтения" Binding="{Binding IsReadOnly, Mode=TwoWay}" Width="150"/>
                <DataGridCheckBoxColumn Header="Скрытый" Binding="{Binding IsHidden, Mode=TwoWay}" Width="80"/>
                <DataGridCheckBoxColumn Header="Архивный" Binding="{Binding IsArchive, Mode=TwoWay}" Width="80"/>
                <DataGridCheckBoxColumn Header="Системный" Binding="{Binding IsSystem, Mode=TwoWay}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопка выбора каталога -->
        <Button Content="Выбрать каталог" Grid.Column="0" Grid.Row="2" Height="30" Margin="0,0,5,0" Click="SelectFolderButton_Click" />

        <!-- Кнопка применения атрибутов -->
        <Button Content="Применить атрибуты" Grid.Column="1" Grid.Row="2" Height="30" Margin="5,0,0,0" Click="ApplyAttributesButton_Click" HorizontalAlignment="Left" Width="150" />
    </Grid>
</Window>
