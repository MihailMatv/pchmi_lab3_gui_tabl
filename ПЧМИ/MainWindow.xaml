<!-- MainWindow.xaml -->
<Window x:Class="FileManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Manager GUI" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Текущий каталог -->
        <TextBlock Text="Текущий каталог:" FontWeight="Bold" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CurrentDirectoryTextBox" Grid.Column="1" Grid.Row="0" Margin="5,0" IsReadOnly="True"/>

        <!-- Дерево каталогов -->
        <TreeView x:Name="DirectoryTreeView" Grid.Column="0" Grid.Row="1" Margin="0,5,5,5" SelectedItemChanged="DirectoryTreeView_SelectedItemChanged"/>

        <!-- Список файлов -->
        <ListBox x:Name="FilesListBox" Grid.Column="1" Grid.Row="1" Margin="5" SelectionChanged="FilesListBox_SelectionChanged"/>

        <!-- Информация о файле и управление атрибутами -->
        <GroupBox Header="Информация о файле" Grid.Column="1" Grid.Row="2" Margin="5" Height="150">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="FileInfoTextBlock" TextWrapping="Wrap" Grid.Column="0" VerticalAlignment="Top"/>
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="Атрибуты:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <CheckBox x:Name="ReadOnlyCheckBox" Content="Только для чтения"/>
                    <CheckBox x:Name="HiddenCheckBox" Content="Скрытый"/>
                    <CheckBox x:Name="ArchiveCheckBox" Content="Архивный"/>
                    <CheckBox x:Name="SystemCheckBox" Content="Системный"/>
                    <Button Content="Применить атрибуты" Margin="0,10,0,0" Click="ApplyAttributesButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Кнопка выбора каталога -->
        <Button Content="Выбрать каталог" Grid.Column="0" Grid.Row="2" Height="30" Margin="0,0,5,0" Click="SelectFolderButton_Click"/>
    </Grid>
</Window>
